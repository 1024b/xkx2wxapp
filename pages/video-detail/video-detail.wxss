/* pages/video-detail/video-detail.wxss */
.video-detail{
    width: 100vw;
    height: 100vw;
}
.video-info{
    position: relative;
    top: -10rpx;
}
.video-wrapper{
    width: 100vw;
    height: calc( 100vw - 100rpx );
    background: #fff;
    position: fixed;
    top: 0;
    z-index: 10000;
}
.main-info{
    background: #262630;
    padding: 26rpx 30rpx 16rpx 30rpx;
    display: flex;
    align-items: center;
}
.author-info{
    display: flex;
    align-items: center;
}
.author-info image{
    width: 60rpx;
    height: 60rpx;
    margin-right: 24rpx;
    border-radius: 50%;
}
.video-author{
    font-size: 30rpx;
}
.video-time{
    padding-top: 6rpx;
    font-size: 24rpx;
    color: #7b7b8b;
}
.collect-info{
    height: 60rpx;
    padding: 5rpx 25rpx;
    background: #383847;
    border-radius: 200rpx;
    display: flex;
    align-items: center;
    margin-left: auto;
    box-sizing: border-box;
}
.like-image{
    width: 35rpx;
    height: 33rpx;
    margin-right: 20rpx;
}
.liked-count{
    font-size: 24rpx;
    color: #7B7B8B;
}
.share-info{
    padding: 5rpx 24rpx 30rpx 24rpx;
    background: #262630;
}
.share-wrapper{
    width: 100%;
    background: #383847;
    border-radius: 6rpx;
    font-size: 30rpx;
    position: relative;
    margin-top: 15rpx;
}
.share-tri{
    width: 0;
    height: 0;
    border-bottom: 15rpx solid #383847;
    border-left: 15rpx solid transparent;
    border-right: 15rpx solid transparent;
    position: absolute;
    top: -14rpx;
    left: 15rpx;
}
.share-text{
    line-height: 45rpx;
    padding: 10rpx 15rpx;
}
.video-tt{
    color: #FFB71B;
}
.sound-info{
    display: flex;
    padding: 25rpx 30rpx 30rpx 30rpx;
    align-items: center;
    background: #262630;
}
.sound-link{
    max-width: 80%;
    padding: 11rpx 25rpx;
    background: #383847;
    border-radius: 200rpx;
    display: flex;
    align-items: center;
    color: #FFB71B;
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.sound-link image{
    width: 37rpx;
    height: 37rpx;
    margin-right: 10rpx;
}
.visitor-count{
    margin-left: auto;
    color: #7B7B8B;
    font-size: 24rpx;
}
.comments-info{
    min-height: 200rpx;
    background: #1a1a21;
    padding-bottom: 10rpx;
}
.comments-title{
    font-size: 24rpx;
    display: flex;
    align-items: center;
    color: #7b7b8b;
    padding: 20rpx 30rpx 10rpx 30rpx;
}
.comments-title image{
    width: 30rpx;
    height: 27rpx;
    margin-right: 10rpx;
}
.comments-bar{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    color: #7b7b8b;
}
.comments-line{
    width: calc( 50% - 25px );
    border-bottom: 1rpx solid #3d3d4e;
    background: #3d3d4e;
}
.comments-item{
    border-bottom: 1rpx solid #3d3d4e;
    padding: 28rpx 30rpx 22rpx 30rpx;
    display: flex;
}
.comments-hots .comments-item:last-child{
    border-bottom: 0;
}
.comments-avar{
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    margin-top: 7rpx;
}
.comments-detail{
    width: calc( 100% - 220rpx );
    padding: 0 20rpx;
}
.comments-username{
    font-size: 28rpx;
    color: #7b7b8b;
    padding-top: 10rpx;
}
.comments-time{
    font-size: 24rpx;
    color: #4e4e61;
    padding-top: 5rpx;
}
.comments-content{
    font-size: 30rpx;
    padding-top: 10rpx;
}
.comments-liked{
    width: 100rpx;
    display: flex;
    justify-content: flex-end;
    font-size: 24rpx;
    color: #7b7b8b;
    padding-top: 16rpx;
}
.comments-liked image{
    width: 28rpx;
    height: 26rpx;
    margin-right: 16rpx;
}
.poke-count{
    text-align: center;
    width: 50rpx;
}
.collect-gif{
    width: 298rpx;
    height: 278rpx;
    position: absolute;
    top: calc( ( 100vw / 2 ) - 139rpx );
    left: calc( ( 100vw / 2 ) - 149rpx );
    z-index: 10000;
}
.collect-gif2{
    width: 140rpx;
    height: 130.6rpx;
    position: absolute;
    top: calc( ( 100vw / 2 ) - 70rpx );
    left: calc( ( 100vw / 2 ) - 70rpx );
    background: url('../../assets/thumb-up.gif') no-repeat;
    background-size: 100%;
    z-index: 10000;
    display: none;
}