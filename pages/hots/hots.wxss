/**index.wxss**/
@keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}
.media_list {
    margin: 0px 0px 10 0px;
    display: flex;
    flex-wrap: wrap;
}
.media_item{
  width: 50%;
  color: #fff;
}
.img_wrap {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}
.img_wrap>image {
  position: absolute;
  top: 0px;
  left: 0px;
}
.fade_in {
  animation: fadeIn 1s both;
}
.media_info{
  padding: 5rpx 30rpx 20rpx 30rpx;
}
.media_userinfo{
  font-size: 24rpx;
  display: flex;
}
.user_avar{
  width: 50rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 50%;
  position: relative;
  top: -30rpx;
}
.user_avar image{
  border-radius: 50%;
}
.user_name{
  width: calc( 100% - 30rpx );
  margin-left: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.media_title{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
}