/* pages/sound-detail/sound-detail.wxss */
@keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}
.media_list {
    margin: 0px 0px 10 0px;
    display: flex;
    flex-wrap: wrap;
}
.media_item{
  width: 50%;
  color: #fff;
}
.img_wrap {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}
.img_wrap>image {
  position: absolute;
  top: 0px;
  left: 0px;
}
.fade_in {
  animation: fadeIn 1s both;
}
.media_info{
  padding: 5rpx 30rpx 20rpx 30rpx;
}
.media_userinfo{
  font-size: 24rpx;
  display: flex;
}
.user_avar{
  width: 50rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 50%;
  position: relative;
  top: -30rpx;
}
.user_avar image{
  border-radius: 50%;
}
.user_name{
  width: calc( 100% - 30rpx );
  margin-left: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.media_title{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
}

.sound-detail{
    width: 100%;
    height: 514rpx;
    position: relative;
}
.cover-img{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}
.cover-bg{
  width: 100%;
  height: calc( 100% + 1rpx );
  background: #000;
  opacity: 0.8;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
}
.sound-container{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 1001;
}
.sound-wrapper{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto 0rpx auto;
  background: #3c3c3d;
  padding: 5rpx;
  border-radius: 50%;
  position: relative;
}
.sound-avar{
  border-radius: 50%;
}
.sound-control{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0.75;
  z-index: 10000;
}
.sound-time{
  font-size: 24rpx;
  color: #7b7b8b;
  text-align: center;
  margin-top: 30rpx;
}
.sound-data{
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 30rpx;
}
.sound-players{
  display: flex;
  padding: 0rpx 100rpx;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto 0rpx auto;
}
.sound-player-tip{
  width: 80rpx;
  margin: 5rpx 0rpx;
  font-size: 26rpx;
  color: #7b7b8b;
}
.sound-player-list{
  width: calc( 100% - 100rpx );
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.sound-player-item{
  padding: 8rpx 20rpx;
  border: 2rpx solid #7b7b8b;
  border-radius: 50rpx;
  margin: 10rpx 10rpx;
  color: #7b7b8b;
  display: inline-block;
}
.sound-cover-rotate{
  animation-name:myRotate;
	animation-duration:5s;
	animation-timing-function:linear;
	animation-iteration-count:infinite;
	animation-direction:normal;
	animation-play-state:paused;
	/* Safari and Chrome: */
	-webkit-animation-name:myRotate;
	-webkit-animation-duration:5s;
	-webkit-animation-timing-function:linear;
	-webkit-animation-iteration-count:infinite;
	-webkit-animation-direction:normal;
	-webkit-animation-play-state:paused;
}
.rotate-running{
  animation-play-state:running;
  -webkit-animation-play-state:running;
}
.rotate-paused{
  animation-play-state: paused;
  -webkit-animation-play-state: paused;
}
@keyframes myRotate{
	0%   {
		transform: rotate(0deg);
	}
	25%  {
		transform: rotate(90deg);
	}
	50%  {
		transform: rotate(180deg);
	}
	75%  {
		transform: rotate(270deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

@-webkit-keyframes myRotate{
	0%   {
		transform: rotate(0deg);
	}
	25%  {
		transform: rotate(90deg);
	}
	50%  {
		transform: rotate(180deg);
	}
	75%  {
		transform: rotate(270deg);
	}
	100% {
		transform: rotate(360deg);
	}
}