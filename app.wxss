/**app.wxss**/
page{
  background: #1B1B23;
  color: #fff;
}
image{
  width: 100%;
  height: 100%;
}
.loading-more{
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  font-size: 26rpx;
  padding: 10rpx 0;
  background: #1B1B23;
}
.loading-img{
  width: 100vw;
  height: 100vw;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading-img image{
  width: 50rpx;
  height: 50rpx;
}
.block-hidden{
  display: none;
}
.block-show{
  display: block;
}

.text-gray{
  color: #7b7b8b;
}
.poked-text{
  color: #ffb71b;
}